@model AddressBookEntry

<div class="col">
    <div class="card">
        <form method="post" asp-controller="Home" asp-action="UpdateAddress"
              asp-route-ofname="@Model.first_name"
              asp-route-olname="@Model.last_name"
              asp-route-ophone="@Model.phone_number"
              asp-route-oemail="@Model.email">

            <label for="firstName">First Name: </label>
            <input type="text" id="firstName" placeholder="First Name" name="fname" value="@Model.first_name" /><br />
            <label for="lastName">Last Name: </label>
            <input type="text" id="lastName" placeholder="Last Name" name="lname" value="@Model.last_name" /><br />
            <label for="phone">Phone: </label>
            <input type="number" id="phone" placeholder="Phone Number" name="phone" value="@Model.phone_number" /><br />
            <label for="email">Email: </label>
            <input type="email" id="email" placeholder="Email" name="email" value="@Model.email" /><br />

            <hr />

            <div class="buttons">
                <input type="submit" class="btn btn-secondary" value="Edit Address">

                <a class="btn btn-secondary"
                   asp-controller="Home"
                   asp-action="RemoveAddress"
                   asp-route-fname="@Model.first_name"
                   asp-route-lname="@Model.last_name"
                   asp-route-phone="@Model.phone_number"
                   asp-route-email="@Model.email">Remove Address</a>
            </div>
        </form>
    </div>
</div>